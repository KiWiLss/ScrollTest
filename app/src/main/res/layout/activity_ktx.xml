<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
android:orientation="vertical">

    <TextView
            android:id="@+id/tv_ktx_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:text="设置文字部分"/>


    <TextView
            android:id="@+id/tv_ktx_dynamic"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="动态设置宽高"
    android:background="#ff00ec"/>

    <ImageView
            android:id="@+id/iv_ktx_url"
            android:layout_width="100dp"
            android:layout_height="100dp"
    />

    <Button
            android:id="@+id/btn_ket_net"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="网络数据请求"/>

    <TextView
            android:id="@+id/tv_ket_net"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_ket_net2"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="网络数据请求2"/>


    <TextView
            android:id="@+id/tv_ket_net2"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>


    <Button
            android:id="@+id/btn_ket_net3"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="网络数据请求3"/>


    <TextView
            android:id="@+id/tv_ket_net3"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>








</LinearLayout>




</ScrollView>